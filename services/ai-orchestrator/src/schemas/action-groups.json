{
  "openapi": "3.0.0",
  "info": {
    "title": "n-agent Action Groups API",
    "description": "API para tools/action groups do Bedrock Agent n-agent",
    "version": "1.0.0"
  },
  "paths": {
    "/get-trip-context": {
      "get": {
        "operationId": "getTripContext",
        "summary": "Obtém o contexto completo da viagem atual",
        "description": "Busca todas as informações coletadas sobre a viagem em planejamento, incluindo destinos, datas, viajantes, orçamento e preferências. Use esta tool no início de cada conversa para entender o estado atual.",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "description": "ID do usuário (phoneNumber ou cognitoId)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "tripId",
            "in": "query",
            "required": false,
            "description": "ID específico da viagem (se não fornecido, retorna a viagem ativa mais recente)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contexto da viagem encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TripContextResponse"
                }
              }
            }
          },
          "404": {
            "description": "Nenhuma viagem encontrada para este usuário"
          }
        }
      }
    },
    "/save-trip-info": {
      "post": {
        "operationId": "saveTripInfo",
        "summary": "Salva informações coletadas sobre a viagem",
        "description": "Persiste uma informação específica coletada durante a conversa. Use esta tool sempre que o usuário fornecer dados importantes como destino, datas, número de viajantes, orçamento ou preferências.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SaveTripInfoRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Informação salva com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SaveTripInfoResponse"
                }
              }
            }
          }
        }
      }
    },
    "/search-weather": {
      "get": {
        "operationId": "searchWeather",
        "summary": "Busca previsão do tempo para um destino",
        "description": "Obtém informações climáticas para um local e período específicos. Use para ajudar o usuário a decidir as melhores datas ou o que levar na mala.",
        "parameters": [
          {
            "name": "location",
            "in": "query",
            "required": true,
            "description": "Nome da cidade ou destino (ex: 'Paris, França')",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "required": true,
            "description": "Data inicial da consulta (formato ISO 8601: YYYY-MM-DD)",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "required": false,
            "description": "Data final da consulta (formato ISO 8601: YYYY-MM-DD). Se não fornecida, retorna apenas para startDate.",
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Previsão do tempo encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WeatherResponse"
                }
              }
            }
          }
        }
      }
    },
    "/search-places": {
      "get": {
        "operationId": "searchPlaces",
        "summary": "Busca lugares e atrações em um destino",
        "description": "Pesquisa restaurantes, hotéis, atrações turísticas e outros pontos de interesse. Use para sugerir opções ao usuário durante o planejamento.",
        "parameters": [
          {
            "name": "location",
            "in": "query",
            "required": true,
            "description": "Nome da cidade ou área para busca (ex: 'Roma, Itália')",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "type",
            "in": "query",
            "required": true,
            "description": "Tipo de lugar a buscar",
            "schema": {
              "type": "string",
              "enum": ["restaurant", "hotel", "attraction", "museum", "park", "shopping", "nightlife", "beach", "nature"]
            }
          },
          {
            "name": "query",
            "in": "query",
            "required": false,
            "description": "Termo de busca adicional (ex: 'restaurante italiano', 'museu de arte')",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "priceLevel",
            "in": "query",
            "required": false,
            "description": "Nível de preço desejado (1=barato, 4=luxo)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 4
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Número máximo de resultados (padrão: 5)",
            "schema": {
              "type": "integer",
              "default": 5,
              "maximum": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lugares encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlacesResponse"
                }
              }
            }
          }
        }
      }
    },
    "/get-user-profile": {
      "get": {
        "operationId": "getUserProfile",
        "summary": "Obtém o perfil e preferências do usuário",
        "description": "Busca informações salvas do usuário como preferências gerais, restrições alimentares, necessidades de acessibilidade e histórico de viagens anteriores.",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "description": "ID do usuário (phoneNumber ou cognitoId)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Perfil do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfileResponse"
                }
              }
            }
          }
        }
      }
    },
    "/create-trip": {
      "post": {
        "operationId": "createTrip",
        "summary": "Cria uma nova viagem",
        "description": "Inicia uma nova viagem para o usuário. Use quando o usuário quiser começar a planejar uma nova viagem.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTripRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Viagem criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateTripResponse"
                }
              }
            }
          }
        }
      }
    },
    "/update-trip-phase": {
      "post": {
        "operationId": "updateTripPhase",
        "summary": "Avança a fase da viagem",
        "description": "Move a viagem para a próxima fase (KNOWLEDGE -> PLANNING -> BOOKING -> CONCIERGE). Use quando todas as informações necessárias foram coletadas.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePhaseRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Fase atualizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdatePhaseResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TripContextResponse": {
        "type": "object",
        "properties": {
          "tripId": {
            "type": "string",
            "description": "ID único da viagem"
          },
          "phase": {
            "type": "string",
            "enum": ["KNOWLEDGE", "PLANNING", "BOOKING", "CONCIERGE", "MEMORIES"],
            "description": "Fase atual da viagem"
          },
          "status": {
            "type": "string",
            "enum": ["DRAFT", "PLANNING", "CONFIRMED", "IN_PROGRESS", "COMPLETED", "CANCELLED"]
          },
          "knowledgeScore": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Porcentagem de informações coletadas (0-100)"
          },
          "destinations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "country": { "type": "string" },
                "stayDuration": { "type": "integer" }
              }
            }
          },
          "dates": {
            "type": "object",
            "properties": {
              "startDate": { "type": "string", "format": "date" },
              "endDate": { "type": "string", "format": "date" },
              "durationDays": { "type": "integer" },
              "isFlexible": { "type": "boolean" }
            }
          },
          "travelers": {
            "type": "object",
            "properties": {
              "count": { "type": "integer" },
              "adults": { "type": "integer" },
              "children": { "type": "integer" },
              "relationship": { "type": "string" }
            }
          },
          "budget": {
            "type": "object",
            "properties": {
              "totalAmount": { "type": "number" },
              "perPersonAmount": { "type": "number" },
              "currency": { "type": "string" },
              "flexibility": { "type": "string" }
            }
          },
          "preferences": {
            "type": "object",
            "properties": {
              "style": { "type": "array", "items": { "type": "string" } },
              "interests": { "type": "array", "items": { "type": "string" } },
              "accommodation": { "type": "array", "items": { "type": "string" } }
            }
          },
          "pendingQuestions": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Lista de informações que ainda precisam ser coletadas"
          },
          "summary": {
            "type": "string",
            "description": "Resumo em linguagem natural do estado atual da viagem"
          }
        }
      },
      "SaveTripInfoRequest": {
        "type": "object",
        "required": ["userId", "field", "value"],
        "properties": {
          "userId": {
            "type": "string",
            "description": "ID do usuário"
          },
          "tripId": {
            "type": "string",
            "description": "ID da viagem (se não fornecido, usa a viagem ativa)"
          },
          "field": {
            "type": "string",
            "enum": [
              "destination",
              "startDate",
              "endDate",
              "durationDays",
              "travelersCount",
              "adultsCount",
              "childrenCount",
              "totalBudget",
              "perPersonBudget",
              "tripStyle",
              "interests",
              "accommodationType",
              "foodRestrictions",
              "accessibilityNeeds",
              "specialOccasion",
              "tripName"
            ],
            "description": "Campo a ser salvo"
          },
          "value": {
            "description": "Valor a ser salvo (tipo varia conforme o campo)"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confiança na extração (0-1)"
          }
        }
      },
      "SaveTripInfoResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "tripId": { "type": "string" },
          "updatedField": { "type": "string" },
          "newKnowledgeScore": { "type": "integer" },
          "nextSuggestedQuestion": { "type": "string" }
        }
      },
      "WeatherResponse": {
        "type": "object",
        "properties": {
          "location": { "type": "string" },
          "forecasts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": { "type": "string", "format": "date" },
                "temperatureMin": { "type": "number" },
                "temperatureMax": { "type": "number" },
                "temperatureUnit": { "type": "string" },
                "conditions": { "type": "string" },
                "precipitationChance": { "type": "integer" },
                "humidity": { "type": "integer" }
              }
            }
          },
          "recommendation": {
            "type": "string",
            "description": "Recomendação baseada no clima (ex: 'Leve roupas leves e protetor solar')"
          }
        }
      },
      "PlacesResponse": {
        "type": "object",
        "properties": {
          "location": { "type": "string" },
          "type": { "type": "string" },
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "placeId": { "type": "string" },
                "name": { "type": "string" },
                "address": { "type": "string" },
                "rating": { "type": "number" },
                "priceLevel": { "type": "integer" },
                "openNow": { "type": "boolean" },
                "description": { "type": "string" },
                "url": { "type": "string" }
              }
            }
          },
          "totalResults": { "type": "integer" }
        }
      },
      "UserProfileResponse": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "name": { "type": "string" },
          "defaultPreferences": {
            "type": "object",
            "properties": {
              "currency": { "type": "string" },
              "language": { "type": "string" },
              "foodRestrictions": { "type": "array", "items": { "type": "string" } },
              "accessibilityNeeds": { "type": "array", "items": { "type": "string" } },
              "favoriteStyles": { "type": "array", "items": { "type": "string" } }
            }
          },
          "pastTripsCount": { "type": "integer" },
          "lastTripDestination": { "type": "string" }
        }
      },
      "CreateTripRequest": {
        "type": "object",
        "required": ["userId"],
        "properties": {
          "userId": { "type": "string" },
          "name": { "type": "string", "description": "Nome opcional para a viagem" },
          "initialDestination": { "type": "string", "description": "Destino inicial se já conhecido" }
        }
      },
      "CreateTripResponse": {
        "type": "object",
        "properties": {
          "tripId": { "type": "string" },
          "status": { "type": "string" },
          "phase": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "UpdatePhaseRequest": {
        "type": "object",
        "required": ["tripId", "newPhase"],
        "properties": {
          "tripId": { "type": "string" },
          "newPhase": {
            "type": "string",
            "enum": ["KNOWLEDGE", "PLANNING", "BOOKING", "CONCIERGE"]
          }
        }
      },
      "UpdatePhaseResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "tripId": { "type": "string" },
          "previousPhase": { "type": "string" },
          "currentPhase": { "type": "string" },
          "message": { "type": "string" }
        }
      }
    }
  }
}
