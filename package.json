{
  "name": "n-agent-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "n-agent - Assistente pessoal de viagens (MVP)",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "bundle:lambda": "node scripts/bundle-lambdas.js",
    "quick-deploy": "pwsh scripts/quick-deploy.ps1",
    "logs:whatsapp": "aws logs tail /aws/lambda/n-agent-whatsapp-bot-dev --follow",
    "logs:trips": "aws logs tail /aws/lambda/n-agent-trip-planner-dev --follow",
    "logs:integrations": "aws logs tail /aws/lambda/n-agent-integrations-dev --follow"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
